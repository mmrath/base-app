<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="1.1.0" author="murali">
        <createTable tableName="t_table_definition">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="table_name" type="VARCHAR(64)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="display_name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="insertable" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>

            <column name="updatable" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="deletable" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="multi_selectable" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="t_column_definition">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="table_id" type="bigint">
                <constraints foreignKeyName="t_col_def_fk1"
                             referencedTableName="t_table_definition"
                             referencedColumnNames="id"
                             nullable="false"/>
            </column>
            <column name="column_index" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="column_name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="display_name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="data_type" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="column_type" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="nullable" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="insertable" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>

            <column name="updatable" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>

            <column name="searchable" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>

            <column name="sortable" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>

            <column name="visible_in_list" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>

            <column name="length" type="INTEGER">
                <constraints nullable="false"/>
            </column>

            <column name="data_cell_template" type="VARCHAR(511)"/>
            <column name="header_cell_template" type="VARCHAR(511)"/>
            <column name="valid_pattern" type="VARCHAR(255)"/>
            <column name="valid_pattern_message" type="VARCHAR(511)"/>
            <column name="default_value" type="VARCHAR(255)"/>

        </createTable>
        <addUniqueConstraint constraintName="column_def_uk1" tableName="t_column_definition"
                             columnNames="table_id,column_name"/>
        <addUniqueConstraint constraintName="column_def_uk2" tableName="t_column_definition"
                             columnNames="table_id,column_index"/>
    </changeSet>

</databaseChangeLog>
